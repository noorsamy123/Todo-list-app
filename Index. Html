<body>
    <div class="container">
        <h1><i class="fas fa-tasks"></i> قائمة مهامي</h1>
        <p class="subtitle">أضف مهامك اليومية وقم بإدارتها بسهولة</p>
        
        <div class="input-section">
            <input type="text" id="taskInput" placeholder="أدخل مهمة جديدة..." autocomplete="off">
            <button id="addBtn"><i class="fas fa-plus"></i> إضافة</button>
        </div>
        
        <div class="stats">
            <span id="totalTasks">إجمالي المهام: 0</span>
            <span id="completedTasks">المكتملة: 0</span>
        </div>
        
        <ul id="taskList" class="task-list">
            <div class="empty-state" id="emptyState">
                <i class="fas fa-clipboard-list"></i>
                <p>لا توجد مهام حالياً<br>ابدأ بإضافة مهمة جديدة!</p>
            </div>
        </ul>
    </div>

    <script>
        // عناصر DOM
        const taskInput = document.getElementById('taskInput');
        const addBtn = document.getElementById('addBtn');
        const taskList = document.getElementById('taskList');
        const emptyState = document.getElementById('emptyState');
        const totalTasksEl = document.getElementById('totalTasks');
        const completedTasksEl = document.getElementById('completedTasks');
        
        // مصفوفة المهام
        let tasks = [];
        
        // تحميل المهام من localStorage
        function loadTasks() {
            const savedTasks = localStorage.getItem('tasks');
            if (savedTasks) {
                tasks = JSON.parse(savedTasks);
                renderTasks();
            }
        }
        
        // حفظ المهام في localStorage
        function saveTasks() {
            localStorage.setItem('tasks', JSON.stringify(tasks));
        }
        
        // إضافة مهمة جديدة
        function addTask() {
            const taskText = taskInput.value.trim();
            
            if (taskText === '') {
                alert('من فضلك أدخل نص المهمة');
                return;
            }
            
            const newTask = {
                id: Date.now(),
                text: taskText,
                completed: false,
                createdAt: new Date().toLocaleString()
            };
            
            tasks.push(newTask);
            taskInput.value = '';
            saveTasks();
            renderTasks();
        }
        
        // حذف مهمة
        function deleteTask(id) {
            tasks = tasks.filter(task => task.id !== id);
            saveTasks();
            renderTasks();
        }
        
        // تبديل حالة المهمة (مكتملة/غير مكتملة)
        function toggleTask(id) {
            tasks = tasks.map(task => {
                if (task.id === id) {
                    return { ...task, completed: !task.completed };
                }
                return task;
            });
            saveTasks();
            renderTasks();
        }
        
        // عرض المهام
        function renderTasks() {
            // تحديث الإحصائيات
            const totalTasks = tasks.length;
            const completedTasks = tasks.filter(task => task.completed).length;
            
            totalTasksEl.textContent = `إجمالي المهام: ${totalTasks}`;
            completedTasksEl.textContent = `المكتملة: ${completedTasks}`;
            
            // إفراغ القائمة
            taskList.innerHTML = '';
            
            // إذا لم تكن هناك مهام
            if (tasks.length === 0) {
                taskList.appendChild(emptyState);
                emptyState.style.display = 'block';
                return;
            }
            
            emptyState.style.display = 'none';
            
            // عرض كل المهام
            tasks.forEach(task => {
                const taskItem = document.createElement('li');
                taskItem.className = `task-item ${task.completed ? 'completed' : ''}`;
                
                taskItem.innerHTML = `
                    <input type="checkbox" class="task-checkbox" ${task.completed ? 'checked' : ''}>
                    <span class="task-text">${task.text}</span>
                    <button class="delete-btn" title="حذف المهمة">
                        <i class="fas fa-trash"></i>
                    </button>
                `;
                
                // أحداث
                const checkbox = taskItem.querySelector('.task-checkbox');
                const deleteBtn = taskItem.querySelector('.delete-btn');
                
                checkbox.addEventListener('click', () => toggleTask(task.id));
                deleteBtn.addEventListener('click', () => deleteTask(task.id));
                
                taskList.appendChild(taskItem);
            });
        }
        
        // أحداث
        addBtn.addEventListener('click', addTask);
        
        taskInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                addTask();
            }
        });
        
        // تحميل المهام عند بدء التشغيل
        document.addEventListener('DOMContentLoaded', loadTasks);
        
        // التركيز على حقل الإدخال عند التحميل
        window.onload = function() {
            taskInput.focus();
        };
    </script>
</body>
</html>
